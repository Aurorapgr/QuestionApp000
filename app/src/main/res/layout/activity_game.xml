<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bege"
    tools:context=".Game">

    <TextView
        android:id="@+id/cardfront"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:background="@drawable/card_back"
        android:gravity="center"
        android:text="?"
        android:textColor="@color/black"
        android:textSize="100dp"
        app:layout_constraintEnd_toEndOf="@+id/cardback"
        app:layout_constraintStart_toStartOf="@+id/cardback"
        app:layout_constraintTop_toTopOf="@+id/cardback" />

    <TextView
        android:id="@+id/cardback"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:alpha="0"
        android:background="@drawable/card_front"
        android:gravity="center"
        android:text=""
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.316" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/flip"
        android:layout_width="180dp"
        android:layout_height="110dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/btn_selector"
        android:gravity="center"
        android:text="PrÃ³xima pergunta"
        android:textColor="#000000"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/end"
        app:layout_constraintTop_toBottomOf="@+id/cardfront" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/end"
        android:layout_width="180dp"
        android:layout_height="110dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/btn_selector"
        android:gravity="center"
        android:text="Encerrar perguntas do dia"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/flip"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardfront" />

    <TextView
        android:id="@+id/titleQuiz"
        android:layout_width="114dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="107dp"
        android:text="ReContar"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#00A858"
        android:textSize="26sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintBottom_toTopOf="@+id/cardfront"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>